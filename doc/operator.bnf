\begin{syntax}
  op-char-1 ::= "=" | "<" | ">" | "~" ;
  \
  op-char-2 ::= "+" | "-";
  \
  op-char-3 ::= "*" | "/" | "%" ;
  \
  op-char-4 ::= "!" | "$" | "&" | "?" | "@" | "^" | "." | ":" | "|" | "#" ;
  \
  op-char ::= op-char-1 | op-char-2 | op-char-3 | op-char-4 ;
  \
  infix-op ::= op-char+
  \
  prefix-op ::= infix-op | "!" op-char-4* | "?" op-char-4* ; %
\end{syntax}