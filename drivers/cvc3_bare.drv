theory map.Map
  syntax type map "(ARRAY %1 OF %2)"
  meta "encoding : lskept" function get
  meta "encoding : lskept" function set

  syntax function get "(%1[%2])"
  syntax function set "(%1 WITH [%2] := %3)"
end

