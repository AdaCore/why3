module Tuple1

	use int.Int
	use ref.Ref

	let b[@infer](_:int) : int
	ensures { result = 20 }
	=
		let i = ref 0 in
		let j = ref 0 in
		i := 0;
		j := 0;
		while !i < 10 do
			variant { 10 - !i }
			let (a, b) = (!i + 1, !j + 2) in
			i := a;
			j := b;
		done;
		!j

