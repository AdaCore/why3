module While3

	use int.Int
	use ref.Ref

	let b(x:int) : int
	ensures { result = 0 }
	=
		let i = ref 0 in
		let j = ref 0 in
		j := 0;
		i := 1;
		while !i < 10 do
			variant { 10 - !i  }
			i := !i + 1;
			j := !j + 2;
		done;
		while 1 < !i do
			variant { !i  }
			i := !i - 1;
			j := !j - 2;
		done;
		while 1 < !i do
			variant { !i  }
			i := !i - 1;
			j := !j - 2;
		done;
		!j
end

