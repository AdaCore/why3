	let f(x:int): unit
	requires { x >= 3 }
	=
		let a = make x 0 in
		let k = ref 0 in
		while (true) do
		variant { 0 }
		invariant { forall i: int. (i = 0 -> (a[i] = !k)) }
		a[0] <- !k + 1;
		incr k;
		done; ()
	
	let cond(x:int): unit
	requires { x >= 3 }
	=
		let a = make x 1 in
		if x >= 5 then
			a[0] <- 7
		else
			a[0] <- 9;
		while (true) do
		variant { 0 }
		invariant { (forall k: int. (k = 0 -> (a[k] = 9 \/ a[0] = 7))) }
		()
		done; ()
	
