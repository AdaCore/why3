
module Test
	use import array.Array
	use import ref.Ref
	use import ref.Refint
	use import int.Int

	let basic(x:int): unit
	=
		let a = make x 2 in
		while (true) do
		variant { 0 }
		invariant { forall w:int. 0 <= w < x -> a[w] = 2 }
		()
		done; ()

	let b(x:int): unit
	=
		let a = make x 2 in
		a[1] <- 42;
		while (true) do
		variant { 0 }
		invariant { a[1] = 42 }
		()
		done; ()


	let b2(x:int): unit
	=
		let a = make x 2 in
		a[1] <- 42;
		while (true) do
		variant { 0 }
		invariant { forall k: int. 0 <= k < length a -> (k > 1 -> a[k] = 2) }
		()
		done; ()
		

	let c(x:int): unit
	requires { x >= 2 }
	=
		let a = make x 1 in
		a[0] <- 0;
		a[1] <- 42;
		while (true) do
		variant { 0 }
		invariant { a[1] = 42 /\ (forall k: int. (0 <= k <= 1 /\ a[k] = 42 *k) \/ k <> 0) }
		()
		done; ()

