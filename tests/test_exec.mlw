module Array

  use import int.Int
  use import array.Array

  exception Found int

  let search (t:array int) (v:int) : int =
    try
      for i=0 to t.length - 1 do
        if t[i] = v then raise (Found i)
      done;
      -1
    with Found i -> i
    end

  let incr (t:array int) : unit =
    for i=0 to t.length - 1 do
      t[i] <- t[i]+1
    done

  let test0 () =
    let t = Array.make 2 21 in
    t[0]+t[1]
    (* should be 42 *)

  let test1 () =
    let t = Array.make 2 21 in
    t[1] <- 17;
    t[0]+t[1]
    (* should be 38 *)

  let test2 () =
