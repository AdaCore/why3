module Termination


  type t = A t | B

  predicate p (x:t) =
    match x with
    | A y -> p y
    | B -> true
    end

  predicate q (x:t) =
    match x with
    | A (A y) -> q y
    | A _y -> false
    | B -> true
    end

  type t1 = E t2
  with t2 = C t1 | D

  predicate r (x:t1) =
    match x with
    | E (C y) -> r y
    | E D -> true
    end


  let rec f "W:diverges:N" (x:t) : t =
    let _y = 42 in
    f x

  let g "W:diverges:N" (x:t) : t =
    while true do () done; x

end


