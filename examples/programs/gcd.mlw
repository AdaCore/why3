
(* Greatest common divisor, using the Euclidean algorithm *)

module EuclideanAlgorithm

  use import int.Int
  use import number.Gcd
  use import int.ComputerDivision

  let rec gcd u v variant { v } =
    { u >= 0 /\ v >= 0 }
    if v = 0 then
      u
    else
      gcd v (mod u v)
    { result = gcd u v }

end

