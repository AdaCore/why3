  let empty (ghost p:type_params 'a 'b) : t 'a 'b
    ensures { c result }
    ensures { result.m.lis = Nil }
    ensures { result.prm = p }
    ensures { result.m.hgt = 0 }
  = { repr = Tree.empty p; prm = p }
  
  (* Node constructor. Restricted to perfect balancing. *)
  let node (l:t 'a 'b) (d:D.t 'a 'b) (r:t 'a 'b) : t 'a 'b
    requires { l.prm = r.prm }
    requires { c l /\ r.prm.D.mp.inv d /\ c r }
    requires { -balancing <= l.m.hgt - r.m.hgt <= balancing }
    ensures { c result }
    ensures { result.prm = l.prm }
    ensures { result.m.hgt =
      1 + if l.m.hgt < r.m.hgt then r.m.hgt else l.m.hgt }
    ensures { result.m.lis = list_node l.m.lis (l.prm.D.mp.mdl d) r.m.lis }
  = let hl = height l in let hr = height r in
    let h = 1 + if hl < hr then hr else hl in
    let p = l.prm in
    let m = M.add p (total l) (M.add p (D.measure p d) (total r)) in
    let s = (d,m,h) in
    let res = { repr = Tree.node r.prm l.repr s r.repr; prm = r.prm } in
    assert { h = height (p.Tree.mp.mdl res.repr) /\
      p.M.mp.mdl m = M.sum D.measure (list_infix fst (p.Tree.mp.mdl res.repr)) /\
      -balancing <= height (p.Tree.mp.mdl r.repr) - height (p.Tree.mp.mdl l.repr) <= balancing /\
      balanced balancing (p.Tree.mp.mdl l.repr) /\
      balanced balancing (p.Tree.mp.mdl r.repr) };
