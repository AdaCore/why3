    requires { c t }
    ensures { t.prm.M.mp.mdl result = M.sum D.measure t.m.lis }
    ensures { t.prm.M.mp.inv result }
  = match Tree.view t.prm t.repr with
    | VEmpty -> M.zero t.prm
    | VNode _ (_,m,_) _ -> m
