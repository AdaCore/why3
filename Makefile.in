DOC = doc/manual.pdf
# doc/manual.html

doc: $(DOC)

doc/manual.pdf: doc/apidoc.tex doc/manual.tex doc/version.tex
	cd doc; pdflatex manual
	cd doc; pdflatex manual

doc/manual.html: doc/manual.tex doc/version.tex
	$(MAKE) -C doc manual.html

clean::
	$(MAKE) -C doc clean

