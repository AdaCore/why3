		plugins/*/*.ml plugins/*/*.ml[ily] \
		lib/coq-tactic/*.v lib/coq/*.v lib/coq/*/*.v \
		src/server/*.c src/server/*.h \
		src/ide/resetgc.c \
		examples/use_api/*.ml

