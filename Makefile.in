	    $(OCAMLOPT) $(OFLAGS) -o $@ $(EXTCMXA) $^

bin/gnat_server.opt: lib/why3/why3.cmxa $(GNATSERVCMX)
	$(if $(QUIET), @echo 'Linking  $@' &&) \
	    $(OCAMLOPT) $(OFLAGS) -o $@ $(EXTCMXA) $^

bin/gnatwhy3.byte: lib/why3/why3.cma $(GNATCMO)
